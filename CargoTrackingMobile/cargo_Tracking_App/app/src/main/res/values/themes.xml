<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cargo_Tracking_App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color (Buttons) -->
        <item name="colorPrimary">@color/button</item>
        <item name="colorPrimaryVariant">@color/button</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color (Navbar) -->
        <item name="colorSecondary">#0E1D34</item>
        <item name="colorSecondaryVariant">#0E1D34</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <!-- Status bar color (same as Navbar) -->
        <item name="android:statusBarColor">#0E1D34</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.Cargo_Tracking_App.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Cargo_Tracking_App.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Cargo_Tracking_App.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
